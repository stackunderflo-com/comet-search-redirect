{
  "manifest_version": 3,
  "name": "Comet Search Redirect",
  "version": "1.0.0",
  "description": "Intelligently redirects single-word searches to Google and keeps multi-word searches on Perplexity AI in Comet browser",

  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],

  "host_permissions": [
    "*://www.perplexity.ai/*",
    "*://www.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://www.perplexity.ai/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Comet Search Redirect",
    "default_icon": {
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["*://www.perplexity.ai/*"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}